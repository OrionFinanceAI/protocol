{
  "name": "@orion-finance/protocol",
  "description": "Orion Finance Protocol",
  "version": "0.3.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "author": {
    "name": "Orion Finance",
    "url": "https://github.com/OrionFinanceAI"
  },
  "scripts": {
    "build": "pnpm clean && pnpm compile",
    "clean": "rimraf ./artifacts ./cache ./coverage ./types ./coverage.json && pnpm typechain",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "SOLIDITY_COVERAGE=true hardhat coverage",
    "lint": "pnpm lint:sol && pnpm lint:ts && pnpm prettier:check",
    "lint:sol": "solhint --max-warnings 5 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "test": "hardhat test",
    "test:sepolia": "hardhat test --network sepolia",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "slither": "HARDHAT_CONFIG=hardhat.slither.config.ts slither . --filter-paths 'lib|node_modules|dependencies|contracts/mocks'"
  },
  "devDependencies": {
    "@fhevm/hardhat-plugin": "^0.0.1-6",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.2",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^2.3.0",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^1.4.3",
    "rimraf": "^5.0.10",
    "solhint": "^5.2.0",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@fhevm/solidity": "^0.7.0",
    "@zama-fhe/oracle-solidity": "^0.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "encrypted-types": "^0.0.4",
    "node-seal": "^5.1.6"
  }
}
